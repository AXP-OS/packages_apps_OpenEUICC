cc_defaults {
    name: "lpac-jni-defaults",
    local_include_dirs: ["lpac"],
    sdk_version: "current",
    cflags: ["-Wno-error"],
}

cc_library_static {
    name: "liblpac-cjson",
    defaults: ["lpac-jni-defaults"],
    srcs: [
        "lpac/cjson/*.c",
    ],
}

cc_library_static {
    name: "liblpac-asn1c",
    defaults: ["lpac-jni-defaults"],
    local_include_dirs: ["lpac/euicc/asn1c"],
    cflags: ["-DHAVE_CONFIG_H"],
    srcs: [
        "lpac/euicc/asn1c/asn1/*.c",
    ],
}

cc_library_static {
    name: "liblpac-euicc",
    defaults: ["lpac-jni-defaults"],
    srcs: [
        "lpac/euicc/*.c",
    ],
    static_libs: [
        "liblpac-asn1c",
        "liblpac-cjson",
    ],
}

cc_library_shared {
    name: "liblpac-jni",
    defaults: ["lpac-jni-defaults"],
    header_libs: ["jni_headers"],
    srcs: [
        "lpac-jni/*.c",
    ],
    static_libs: [
        "liblpac-euicc",
        "liblpac-asn1c",
        "liblpac-cjson",
    ],
    shared_libs: ["liblog"],
}
